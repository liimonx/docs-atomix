    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "validate:components": "ts-node scripts/validate-component-metadata.ts",
    "generate:tokens": "ts-node --esm scripts/generateTokens.ts"
  },
  "keywords": [
    "design-system",
    "react",
    "components",
    "typescript",
    "atomix",
    "ui-library",
    "design-tokens",
    "glass-morphism",
    "accessibility",
    "documentation"
  ],
