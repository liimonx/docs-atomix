{
  "name": "atomix-design-system-docs",
  "version": "1.0.0",
  "description": "Comprehensive documentation site for the Atomix Design System - 40+ components, design tokens, layouts, and AtomixGlass effects",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 200",
    "type-check": "tsc --noEmit",
    "test": "vitest run src/utils/__tests__/routeMapper.test.ts src/utils/__tests__/breadcrumbs.test.ts",
